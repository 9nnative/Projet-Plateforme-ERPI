{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    
<section class="main">
    <h1 class="center">Rejoindre la plateforme</h1>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name, { 'label': 'Nom' }) }}
        {{ form_row(registrationForm.forename, { 'label': 'Prénom' }) }}
        {{ form_row(registrationForm.type, { 'label': 'Vous êtes ...' }) }}
        {{ form_row(registrationForm.email, { 'label': 'E-mail' }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
            
        }) }}
        <div class="uk-margin center">
       <button type="submit" class="btn uk-button uk-button-default center">S'inscrire</button>
    </div>
    {{ form_end(registrationForm) }}
</section>
{% endblock %}
