<!DOCTYPE html>
<html class ="theme">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.5.9/dist/css/uikit.min.css" />
        <link rel="stylesheet" href="{{ asset('CSS/stylesheet.css') }}"/>

        {% endblock %}
    </head>

    <body>
    {% if app.user %}
        
            <div uk-sticky="sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky">   
            <div class="uk-position-top-right navbarprofil">
            <div class="uk-navbar-right">
                <ul class="uk-navbar-nav">
                    <li>
                        <a uk-toggle="target: #modal-profil" href="#">Profil</a>
                            <div id="modal-profil" uk-modal>
                                <div class="uk-modal-dialog uk-modal-body modalprofil center">
                                <button class="uk-modal-close-default" type="button" uk-close></button>
                                <div class="uk-width-auto">
                                    <img class="uk-border-circle" width="65" height="65" src="{{ app.user.profilepicpath }}">
                                </div>
                          <ul class="uk-nav uk-navbar-dropdown-nav">
                            <li class="uk-active"><p>{{ app.user.forename }} {{ app.user.name }}</p></li>                             
                            <li class="uk-nav-divider"></li>
                                <li><a uk-icon="icon:  lifesaver" href="{{ path('help') }}">Besoin d'aide ? </a></li>
                            <li class="uk-nav-divider"></li>
                                <li><a uk-icon="icon: file-edit" href="{{ path('edituser') }}">Modifier le profil </a></li>
                                {# <li><a class="uk-button uk-button-default" onclick ="ToggleTheme()" href="#">Activer/désactiver le thème</a></li>       #}
                                <li class="uk-nav-divider"></li>
                                <li></a> <a uk-icon="icon: sign-out" href="{{ path('app_logout') }}">Se déconnecter </a></li>     
                                </ul>
                                </div>
                            </div> 
                    </li>
                </ul>
            </div>
            </div>
            </div>
        
<div uk-sticky="sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky">       
<div class="uk-position-top-left navbar">
    <ul class="uk-nav-primary uk-nav-parent-icon" uk-nav>
        <li class="uk-active"><a href="{{ path('main') }}">Acceuil</a></li>
        <li class="uk-parent">
            <a href="#">Projets</a>
            <ul class="uk-nav-sub">
                <li><a href="{{ path('project_add') }}">Créer un nouveau projet</a></li>
                <li><a href="{{ path('allprojects') }}">Voir tous les projets</a></li>
            </ul>
        </li>
        <li class="uk-parent">
            <a href="">Dashboard</a>
            <ul class="uk-nav-sub">
                <li><a href="{{ path('dashboard') }}">Mon dashboard</a></li>
            </ul>
        </li>
        <li>       
            <div class="uk-margin">
                <form class="uk-search uk-search-default">
                    <span class="uk-search-icon-flip" uk-search-icon></span>
                    <input class="uk-search-input" type="search" placeholder="Rechercher ...">
                </form>
            </div>
        </li>
        <span  class="uk-label uk-label-success labelstate">Bêta 0.1.3</span>
    </ul>
</div>
</div>

        {% endif %}


        {% block body %}        {% endblock %}


        {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.9/dist/js/uikit.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.9/dist/js/uikit-icons.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script>
        function ToggleTheme(){
        var element = document.getElementById("background");
        element.classList.toggle("theme");
        }
        </script>
        {% endblock %}
    
    </body>

</html>
