<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.5.9/dist/css/uikit.min.css" />
        <link rel="stylesheet" href="{{ asset('CSS/stylesheet.css') }}"/>
        {% endblock %}
    </head>
    <body>
    {% if app.user %}
        <nav class="uk-navbar-container uk-navbar-transparent" uk-navbar>
            <div class="uk-navbar-left">
                <ul class="uk-navbar-nav">
                    <li><a href="{{ path('main') }}">Acceuil</a></li>
                    <li>
                        <a href="#">Projets</a>
                        <div class="uk-navbar-dropdown">
                            <ul class="uk-nav uk-navbar-dropdown-nav">
                                <li class="uk-active"><a href="{{ path('allprojects') }}">Voir tous les projets</a></li>
                                <li class="uk-nav-divider"></li>
                                <li class="uk-active"><a href="#">Consulter mes projets</a></li>
                                <li><a href="#">•••</a></li>
                                <li><a href="#">•••</a></li>
                                <li><a href="#">•••</a></li>
                            </ul>
                        </div>
                    </li>
                    <li><a href="{{ path('project_add') }}">Créer un projet</a></li>
                    <li><a href="{{ path('task_add') }}">Créer une tâche</a></li>

                </ul>
        <div>
            <a class="uk-navbar-toggle" uk-search-icon href="#"></a>
            <div class="uk-drop" uk-drop="mode: click; pos: right; offset: 0">
                <form class="uk-search uk-search-navbar uk-width-1-1">
                    <input class="uk-search-input" type="search" placeholder="Rechercher ..." autofocus>
                </form>
            </div>
        </div>
            </div>
            <div class="uk-navbar-right">
                <ul class="uk-navbar-nav">
                    <li>
                        <a href="{{ path('userdetails') }}">Profil</a>
                        <div class="uk-navbar-dropdown">
                            <ul class="uk-nav uk-navbar-dropdown-nav">
                            <li class="uk-active"><p>{{ app.user.forename }} {{ app.user.name }}</p></li>
                            <li class="uk-nav-divider"></li>
                                <li><a uk-icon="icon: file-edit" href="#">Modifier le profil </a></li>
                                <li class="uk-nav-divider"></li>
                                <li></a> <a uk-icon="icon: sign-out" href="{{ path('app_logout') }}">Se déconnecter </a></li>     
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        {% endif %}


        {% block body %}{% endblock %}
        
        {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.9/dist/js/uikit.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.9/dist/js/uikit-icons.min.js"></script>
        {% endblock %}
    
    </body>

</html>
