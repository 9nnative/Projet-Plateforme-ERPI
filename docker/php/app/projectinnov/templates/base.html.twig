<!DOCTYPE html>

<html class ="theme">
    <head>
        <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.5.9/dist/css/uikit.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css"/>
        <link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/box-shadows-css@1/box-shadows.min.css">
        <link id="u-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i">
        {% endblock %}
        {% block javascripts %}
        <script
        src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.9/dist/js/uikit.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.9/dist/js/uikit-icons.min.js"></script>












<script> 
$('.ui.sticky')
  .sticky({
    context: '#navbar'
  })
;


$('#tglremoveProject').click(function(){      
            $('.ui.basic.modal.deleteProject')
            .modal('show')
            ;
});

$('#tglCGU').click(function(){      
            $('.ui.modal.cgu')
            .modal('show')
            ;
});

// $('.ui.checkbox')
//   .checkbox()
// ;


</script>
        {% endblock %}
    </head>



    <body>
    {% if app.user %}
    <div id ="navbar" class="ui attached stackable menu ui sticky" >
  <div class="ui container ">
    <a href="{{ path('main') }}" class="item">
      <i class="home icon"></i> Accueil
    </a>
    <div class="ui simple dropdown item">
    <i class="grid layout icon"></i>
      Menu
      
      <div class="menu">
        <a href="{{ path('project_add') }}" class="item"><i class="plus square icon"></i> Créer un nouveau projet </a>
        <a href="{{ path('allprojects') }}" class="item"><i class="list icon"></i> Voir tous les projets</a>
        <a href="{{ path('dashboard') }}" class="item"><i class="qrcode icon"></i> Mon dashboard </a>
      </div>
    </div>

    <a href="{{ path('allmessages') }}" class="item">
      <i class="comment outline icon"></i> Messages
    </a>
    <div class="ui simple dropdown item">
      Mon profil
      <i class="dropdown icon"></i>
      <div class="menu">
        <a href="{{ path('user_profile', {'id':app.user.id}) }}" class="item"><i class="user icon"></i> Voir mon profil</a>
        <a href="{{ path('edituser') }}" class="item"><i class="edit icon"></i> Éditer le profil</a>
        <a href="{{ path('help') }}" class="item"><i class="help icon"></i> Besoin d'aide ? </a>
        <a id="tgldisconnect" class="ui toggle item"><i class="log out icon"></i> Se déconnecter</a>
      </div>
    </div>
        <div onclick="window.location.href='{{ path('notifications') }}'" class="ui simple dropdown item">
            <i class="bell outline icon"></i>
        

        </div>
    <div class="right item">

      <div class="ui mini image">
        <img src="https://www.univ-lorraine.fr/sites/www.univ-lorraine.fr/files/node_files/publics/users/martin38/2013/10/isotype_ul.jpg">
      </div>

            <div class="ui mini image">
        <img src="https://empp.univ-lorraine.fr/files/2020/01/ERPI_Logo.png">
      </div>
    </div>
    </div>
  </div>
        {# PC #}          
</div>       


<div class="ui basic modal disconnect">
  <div class="ui icon header">
    <i class="sign out alternate icon"></i>
    Confirmation
  </div>
  <div class="content center">
    <p>Voulez-vous vraiment vous déconnecter ?</p>
  </div>
  <div class="actions">
    <div class="ui red basic cancel inverted button">
      <i class="remove icon"></i>
      Non
    </div>
    <div id="tgldisconnect" class="ui green ok inverted button" onclick="window.location.href='{{ path('app_logout') }}'">
     <i class="checkmark icon"></i>
      Oui
    </div>
  </div>
</div>

<script>
$('#tgldisconnect').click(function(){      
            $('.ui.basic.modal.disconnect')
            .modal('show')
            ;
});
</script>
{% endif %}

<div class="ui container">
<br>
        {% for label, messages in app.flashes %}
            <div class="uk-alert-primary" uk-alert>
                {% for message in messages %}
                    <div class="flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        {% endfor %}

        {% block body %}

        {% endblock %}
</div>
        
    </body>

</html>
